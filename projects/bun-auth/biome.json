{
    "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
    "formatter": {
        "indentStyle": "space",
        "lineWidth": 180,
        "indentWidth": 4
    },
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "always",
            "quoteStyle": "single",
            "jsxQuoteStyle": "double",
            "semicolons": "asNeeded",
            "trailingCommas": "es5"
        }
    },
    "json": {
        "formatter": {
            "enabled": false
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noExplicitAny": "off"
            },
            "style": {
                "noUnusedTemplateLiteral": "off"
            }
        }
    },
    "files": {
        "includes": ["**", "!**/dist", "!**/*.generated.js", "!**/node_modules"]
    }
}
